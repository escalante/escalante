<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="urn:escalante:lift:1.0"
           xmlns="urn:escalante:lift:1.0"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified"
           version="1.0">

   <!-- TODO: Fix schema!!! -->

   <!-- The subsystem root element -->
   <xs:element name="subsystem" type="escalanteLiftType" />

   <xs:complexType name="escalanteLiftType">
      <xs:annotation>
         <xs:documentation>
            The lift subsystem, used to configure escalante.lift
         </xs:documentation>
      </xs:annotation>
      <xs:sequence>
         <xs:element minOccurs="0" maxOccurs="1" name="thirdparty-modules-repo"
                     type="thirdpartyModulesRepoType" />
      </xs:sequence>
   </xs:complexType>

   <xs:complexType name="thirdpartyModulesRepoType">
      <xs:sequence>
         <xs:choice maxOccurs="1">
            <xs:element name="designated">
               <xs:annotation>
                  <xs:documentation>
                     Downloaded modules will installed within Escalante's
                     designated thirdparty modules directory.
                  </xs:documentation>
               </xs:annotation>
            </xs:element>
            <xs:element name="app-server">
               <xs:annotation>
                  <xs:documentation>
                     Downloaded modules will be installed within
                     JBoss AS's modules directory.
                  </xs:documentation>
               </xs:annotation>
            </xs:element>
            <xs:element name="custom-path">
               <xs:annotation>
                  <xs:documentation>
                     Downloaded modules will be installed in this module path.
                  </xs:documentation>
               </xs:annotation>
            </xs:element>
         </xs:choice>
      </xs:sequence>
   </xs:complexType>



</xs:schema>